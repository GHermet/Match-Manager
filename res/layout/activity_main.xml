<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_vertical"
    android:gravity="center_vertical|fill_vertical"
    android:ignoreGravity="@layout/activity_main"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
      <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <ImageButton
        android:id="@+id/football_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:src="@drawable/football_icon"
        tools:ignore="ContentDescription"
        android:adjustViewBounds="false" />
  

    <ImageButton
        android:id="@+id/basketball_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/football_button"
        android:layout_below="@+id/football_button"
        android:src="@drawable/basketball_icon"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/volleyball_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/basketball_button"
        android:layout_below="@+id/basketball_button"
        android:src="@drawable/volleyball_icon"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/rugby_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/volleyball_button"
        android:layout_below="@+id/volleyball_button"
        android:src="@drawable/rugby_icon"
        tools:ignore="ContentDescription" />

            <ImageButton
        android:id="@+id/pingpong_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tennis_button"
        android:layout_below="@+id/tennis_button"
        android:src="@drawable/pingpong_icon"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/badminton_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pingpong_button"
        android:layout_centerHorizontal="true"
        android:src="@drawable/badminton_icon"
        tools:ignore="ContentDescription" />
 
</LinearLayout>  
</ScrollView>    
</RelativeLayout>
