<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hermax_Lab.matchmanager"
    android:versionCode="8"
    android:versionName="2.3.1"

    >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.SEND_SMS"/> // permission d envoyer des message
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/> // permission d ecrire dans la carte SD
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/> // permission de lire la carte SD




    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo">
        <activity
            android:name="hermax_Lab.matchmanager.MainActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
           <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
           </intent-filter>
          
        </activity>

        <activity  android:name=".SportActivity"/>
         <activity  android:name="Football_Activity"/>
        <activity  android:name="Football_previousMatches"/>
        <activity android:name="tab_Activity"
              android:screenOrientation="portrait"/>
        <activity android:name= ".End_Game"
             android:screenOrientation="portrait"/>
        <activity  android:name=".Settings"
            android:screenOrientation="portrait"/>
        <activity  android:name=".Players"
            android:screenOrientation="portrait"/>
        <activity  android:name=".Match"
            android:screenOrientation="portrait"/>
        
           
        
    </application>

</manifest>
